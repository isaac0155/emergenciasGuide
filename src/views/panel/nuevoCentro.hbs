<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card-header text-center">
                <h3>Registrar Centro de Salud al NIT {{nit.nit}}</h3>
            </div>
            <div class="card-body">
                <form action="/links/panel/centrosSalud/nuevo/{{nit.idNit}}" method="post">
                    <div class="form-group">
                        <label for="" class="form-label">Nombre Centro de Salud</label>
                        <input type="text" name="nombre" placeholder="Nombre Centro de Salud" class="form-control" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">NIT Centro de Salud</label>
                        <input type="text" name="NIT" placeholder="{{nit.nit}}" class="form-control" value="{{nit.nit}}" required disabled>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">Nombre del Propietario del Centro de Salud</label>
                        <input type="text" name="propietario" placeholder="Nombre del Propietario" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">Numero de Contacto del Propietario</label>
                        <input type="number" name="contacto" placeholder="Telefono" class="form-control" required>
                    </div>
                    
                    <div class="form-group d-grid gap-2" >
                        <button class="btn btn-success btn-blok" id="btn">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>