<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <img src="https://i.ibb.co/sy5YrsX/user.png" class="rounded mx-auto d-block" width="150" height="150" alt="perfil">
                    <h3 class="mt-3">Bienvenido {{user.usuario}}</h3>
                    <h6 class="text-success">{{user.tipoUser}}</h6>
                    <div class="card-body">
                        <div ALIGN=left class="card-body">
                            <h6>Nombre:     {{user.nombres}} {{user.apellidos}}</h6>
                            <h6>Carnet: {{user.carnet}}</h6>
                            <h6 id="fechaNa">Fecha de Nacimiento: </h6>
                            <h6>Tipo de Sangre: {{user.tipoSangre}}</h6>
                            <h6>Alergias: {{user.alergias}}</h6>
                            <h6>Preferencias: {{user.preferencias}}</h6>
                            {{#if user.paciente}}
                            {{/if}}
                        </div>
                    </div>

                    <a href="/links" class="btn btn btn-outline-primary mt-3">
                        Modificar Datos
                    </a>
                    <a href="/logout" class="btn btn-danger mt-3">
                        Cerrar sesi√≥n
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var fechaOriginal = '{{user.fechaNacimiento}}';
    var fecha = new Date(fechaOriginal);
    var fechaFormateada = fecha.toLocaleDateString('es-ES');
    //console.log(fechaFormateada);
    document.getElementById('fechaNa').innerHTML += fechaFormateada
</script>